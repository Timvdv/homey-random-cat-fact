{
    "id": "com.appspot.catfacts-api",
    "name": {
        "en": "Random cat fact"
    },
    "category": "internet",
    "version": "0.0.1",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Tim van de Vathorst",
        "email": "tim@vandevathorst.nl",
        "website": "timvandevathorst.nl",
        "github": "https://github.com/Timvdv/homey-random-cat-fact"        
    },
    "description": {
        "en": "Tells you a random cat fact to feed your knowledge"
    },    
    "images": {
        "large": "./assets/images/large.png",
        "small": "./assets/images/small.png"
    },    
    "dependencies": {
        "request": "*"
    },
    "permissions": [
        "homey:manager:speech-output"
    ],
    "speech": [
        {
            "id": "random",
            "importance": 0.4,
            "triggers": {
                "en": [ "random" ]
            }
        },
        {
            "id": "cat",
            "importance": 0.6,
            "triggers": {
                "en": [ "cat", "get" ]
            }
        },
        {
            "id": "fact",
            "importance": 0.4,
            "triggers": {
                "en": [ "fact", "facts"]
            }
        }
    ]    
}
